            <div class="inner-bg">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-2 text">
                            <h1><strong>Bienvenido</strong> a REDSOCIAL</h1>
                            
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-sm-offset-3 form-box">
                          <div class="form-top">
                            <div class="form-top-left">
                              <h3>Registro en red social.</h3>
                                <p>Por favor, rellena los siguientes campos</p>
                            </div>
                            <div class="form-top-right">
                              <i class="fa fa-lock"></i>
                            </div>
                            </div>
                            <p>
                        <!-- Mostrar mensajes Flash  -->
                        <% for(var i in messages) { %>
                        <div class="flash" style="color:red"><%= messages[i] %></div>
                        <% } %>
                      </p>
                            <div class="form-bottom">
                          <form role="form" action="/signup" method="post" class="login-form">
                            <div class="form-group">
                              <label class="sr-only" for="form-username">Usuario</label>
                                <input type="text" name="username" placeholder="nombre de usuario ..." class="form-username form-control" id="form-username">
                              </div>
                            
                              <div class="form-group">
                                <label class="sr-only" for="form-password">Contraseña</label>
                                <input type="password" name="password" placeholder="Password..." class="form-password form-control" id="form-password">
                              </div>
                              <button type="submit" class="btn">Registrarme!</button>
                          </form>
                        </div>
                        </div>
                    </div>  
                </div>
            </div>
            
